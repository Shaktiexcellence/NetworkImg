/**class Introduction**/
class BankAccount {
  BankAccount({
    required this.accountHolder,
    this.balance = 0,
  });

//     : accountHolder = accountHolder,
//         balance = balance;
  //   BankAccount(double balance) {
//    this.balance = balance;
//   }
  final  String accountHolder;
  double balance;

  void deposit(double amount) {
    balance += amount;
  }

  bool withdraw(double amount) {
    if (balance > amount) {
      balance -= amount;
      return true;
    } else
      return false;
  }
}





